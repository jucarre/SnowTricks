{% extends 'base.html.twig' %}
{% use '/account/_layout_menu.html.twig' %}

{% block title %}Snow Tricks {% endblock %}
{% block header %}
    <!-- Header -->
{% endblock %}

{% block content %}
    <div class="background-image"
         style="background-image: url({{ asset('/uploads/pictures/snow-3.jpeg')}});
                 -webkit-filter: blur(6px);
                 -moz-filter: blur(6px);
                 -o-filter: blur(6px);
                 -ms-filter: blur(6px);
                 filter: blur(6px);
                 position: fixed;
                 width: 100%;
                 height: 100%;
                 top: 0;
                 left: 0;
                 z-index: -1;
                 background-position: center;"></div>
    <section class="bg-light shadow-lg " id="portfolio" style="background-color: rgba(0, 0, 0, 0)!important;">
        <div class="container ">
            <div class="row">
                {% block menu %}
                    {{ parent() }}
                {% endblock %}
                <div class="col-md-9 col-sm-12">
                    <div class="card  ml-auto mr-auto">

                        <div class="media-body ">
                            <div class="card-body">
                                <div class="card-text">
                                    <div class="form-group">
                                        <h3 class="mb-5 mt-4">Photo de profil
                                            {% if app.user.profilePicture is not defined %}
                                            <img class="float-right mr-1 rounded-circle embed-responsive"
                                                 src="{{ asset('uploads/pictures/'~ form.vars.value.pathPicture) }}"
                                                 style="max-width: 65px;"
                                                 alt="...">
                                            {% else %}
                                                <img src="http://placehold.it/65X65"
                                                     class="float-right mr-3 rounded-circle embed-responsive" style="max-width: 65px;"
                                                     alt="photo de profile default">
                                            {% endif %}
                                        </h3>

                                        {{ form_start(form) }}
                                        {{ form_row(form.file) }}

                                    </div>
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-outline-success float-right mb-3">
                                        {{ (form.vars.value.pathPicture is defined) ? "Modifer" : "Ajouter une image"}}
                                    </button>
                                </div>

                                {{ form_end(form) }}
                            </div>
                        </div>


                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
