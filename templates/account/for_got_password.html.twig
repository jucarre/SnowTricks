{% extends 'base.html.twig' %}

{% block title %}Snow Trick / Mot de passe oublié{% endblock %}

{% block header %}{% endblock %}

{% block content %}
    <div class="background-image"
         style="background-image: url({{ asset('/uploads/pictures/snow-3.jpeg')}});
                 -webkit-filter: blur(6px);
                 -moz-filter: blur(6px);
                 -o-filter: blur(6px);
                 -ms-filter: blur(6px);
                 filter: blur(6px);
                 position: fixed;
                 width: 100%;
                 height: 100%;
                 top: 0;
                 left: 0;
                 z-index: -1;
                 background-position: center;"></div>
    <section class="bg-light shadow-lg " id="portfolio" style="background-color: rgba(0, 0, 0, 0)!important;">
        <div class="container mt-5">
            <div class="row mt-5">
                <div class="card mt-5  ml-auto mr-auto">
                    <div class="col-md-12  mb-2 ">
                        <h1 class="h3 mt-3 mb-4 font-weight-normal">Mot de passe oublié</h1>
                        {{ form(form) }}

                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}