{% for trick in tricks %}
    <div class="col-md-3 col-sm-6 mt-2">
        <div class="card card-home m-1 ">
        <a href="{{ path('show', {'id': trick.id}) }}">
            <img class="card-img-top" src="{{ asset('uploads/pictures/thumbnail/'~ trick.pictureDefault.name) }}" alt="">
        </a>
            <div class="card-body">
            <h6>{{ trick.name }}
                {% if is_granted('EDIT', trick) %}
                    <a href="{{ path('edit_trick', {'id': trick.id}) }}">
                        <i class="fas fa-pencil-alt"></i>
                    </a>
                {% endif %}
                {% if is_granted('DELETE', trick) %}
                    <a href="{{ path('delete_trick', {'id': trick.id}) }}">
                        <i class="fas fa-trash-alt"></i>
                    </a>
                {% endif %}
            </h6>
            </div>
        </div>
    </div>
{% endfor %}
