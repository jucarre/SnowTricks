{% for trick in tricks %}
    <div class="col-md-3 col-sm-6 trickparent mt-2"
         data-idtrick="{{ trick.id }}"
            {% if is_granted('DELETE', trick) %}
        data-link="{{ path('delete_trick', {'id': trick.id}) }}"
            {% endif %}>
        <div class="card card-home m-1">
            <a href="{{ path('show', {'id': trick.id}) }}">
                <img class="card-img-top" src="{{ asset('uploads/pictures/thumbnail/'~ trick.pictureDefault.name) }}"
                     alt="">
            </a>
            <div class="card-body">
                <h6>{{ trick.name }}
                    {% if is_granted('EDIT', trick) %}
                        <a class="suppr-trick float-right "
                           href="{{ path('edit_trick', {'id': trick.id}) }}">
                            <i class="fas fa-pencil-alt"></i>
                        </a>
                    {% endif %}
                    {% if is_granted('DELETE', trick) %}
                        <a class="suppr-trick float-right mr-2" href="#">
                            <i class="fas fa-trash-alt"></i>
                        </a>
                    {% endif %}
                </h6>
            </div>
        </div>
    </div>
{% endfor %}
